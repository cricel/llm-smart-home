<?xml version="1.0"?>
<root main_tree_to_execute="MainTree">

  <BehaviorTree ID="MainTree">
    <!-- Fallback will execute the first child, and if it fails, go to the next -->
    <Fallback name="GoToPosition1_Fallback">

      <!-- Navigate to Position 1 -->
      <Sequence name="GoToPosition1">
        <NavigateToPose name="NavigateToPosition1" goal="{goal_position_1}" />
        <!-- If navigation succeeds, go to Position 2 -->
        <NavigateToPose name="NavigateToPosition2" goal="{goal_position_2}" />
      </Sequence>

      <!-- If navigation to Position 1 fails, navigate to Position 3 -->
      <NavigateToPose name="NavigateToPosition3" goal="{goal_position_3}" />

    </Fallback>
  </BehaviorTree>

</root>
